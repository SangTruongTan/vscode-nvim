[
	{
		"key": "ctrl+f r",
		"command": "editor.action.startFindReplaceAction",
		"when": "editorFocus || editorIsOpen"
	},
	{
		"key": "ctrl+h",
		"command": "-editor.action.startFindReplaceAction",
		"when": "editorFocus || editorIsOpen"
	},
	{
		"key": "ctrl+h",
		"command": "workbench.action.focusActiveEditorGroup",
		"when": "workbench.explorer.openEditorsView.active || filesExplorerFocus && neovim.mode!='insert'"
	},
	{
		"key": "ctrl+k",
		"command": "workbench.action.navigateUp",
		"when": "neovim.mode!='insert'"
	},
	{
		"key": "ctrl+k",
		"command": "workbench.files.action.focusOpenEditorsView",
		"when": "filesExplorerFocus && neovim.mode!='insert'"
	},
	{
		"key": "ctrl+l",
		"command": "workbench.action.navigateRight",
		"when": "neovim.mode!='insert'"
	},
	{
		"key": "ctrl+j",
		"command": "workbench.action.navigateDown",
		"when": "neovim.mode!='insert'"
	},
	{
		"key": "ctrl+j",
		"command": "workbench.files.action.focusFilesExplorer",
		"when": "!editorFocus && workbench.explorer.openEditorsView.active && neovim.mode!='insert'"
	},
	{
		"key": "ctrl+h",
		"command": "workbench.action.navigateLeft",
		"when": "neovim.mode!='insert'"
	},
	{
		"key": "ctrl+v",
		"command": "-editor.action.clipboardPasteAction"
	},
	{
		"key": "ctrl+shift+j",
		"command": "workbench.action.terminal.toggleTerminal"
	},
	{
		"key": "ctrl+shift+k",
		"command": "workbench.action.terminal.focusNext",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+shift+l",
		"command": "workbench.action.terminal.focusPrevious",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+shift+w",
		"command": "workbench.action.terminal.kill",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+shift+a",
		"command": "workbench.action.terminal.new",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+h",
		"command": "vscode-neovim.send",
		"args": "<C-h>",
		"when": "editorTextFocus && neovim.mode == 'insert'"
	},
	{
		"key": "ctrl+j",
		"command": "vscode-neovim.send",
		"args": "<C-j>",
		"when": "editorTextFocus && neovim.mode == 'insert'"
	},
	{
		"key": "ctrl+k",
		"command": "vscode-neovim.send",
		"args": "<C-k>",
		"when": "editorTextFocus && neovim.mode == 'insert'"
	},
	{
		"key": "ctrl+l",
		"command": "vscode-neovim.send",
		"args": "<C-l>",
		"when": "editorTextFocus && neovim.mode == 'insert'"
	},
	{
		"key": "ctrl+a",
		"command": "vscode-neovim.send",
		"args": "<C-a>",
		"when": "editorTextFocus && neovim.mode == 'insert'"
	}
]